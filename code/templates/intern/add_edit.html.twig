{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{asset('css/internForm.css')}}>
{% endblock %}

{% block javascripts %}

{% endblock %}

{% block title %} Intern Add Panel {% endblock %}
{% block pageTitle %} Intern Add Panel {% endblock %}
{% block pageDesc %} This is the page where you add an intern {% endblock %}

{% block body %}
    <div class="add-edit-container">
        <div class="infos">
            <h2>
                <i class="fa-regular fa-file-lines"></i>
                <span >Edit an Intern</span>
            </h2>
            <p class="description">Add an intern by specifying its informations (Interns cannot be added into sessions from this page) </p>
            <hr />
        </div>
        <div class="form-container">
            <form class="intern-form">
                <div class="inner-form">
                    <div class="form-group">
                        <label for="email">Email</label>
                        {{ form_widget(internForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            {{ form_widget(internForm.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            {{ form_widget(internForm.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="birthDate">Birth Date</label>
                        {{ form_widget(internForm.birthDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre</label>
                        {{ form_widget(internForm.genre, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="city">City</label>
                            {{ form_widget(internForm.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            {{ form_widget(internForm.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="actions">
                    <a class="btn cancel" href={{path("intern_index")}}>Cancel</a>
                    <button type="submit" class="btn submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
