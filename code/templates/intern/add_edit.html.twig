{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{asset('css/internForm.css')}}>
{% endblock %}

{% block javascripts %}

{% endblock %}

{% set operation = isEdit ? "Edit" : "Add" %}

{% block title %} Intern {{operation}} Panel {% endblock %}
{% block pageTitle %} Intern {{operation}} Panel {% endblock %}
{% block pageDesc %} 
    {{isEdit ? 
        "This is the page where you edit an intern."
        :
        "This is the page where you add an intern."
    }} 
{% endblock %}

{% block body %}
    <div class="add-edit-container">
        <div class="infos">
            <h2>
                <i class="fa-regular fa-file-lines"></i>
                <span>{{operation}} an Intern</span>
            </h2>
            <p class="description">
            {{isEdit ? 
                "Edit an intern by updating their existing informations"
                :
                'Add an intern by specifying their informations (Interns cannot be added into sessions from this page)'
            }}
             </p>
            <hr />
        </div>
        <div class="form-container">
            {{ form_start(internForm) }}
                <div class="inner-form">
                    <div class="form-group">
                        <label for="email">Email</label>
                        {{ form_widget(internForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            {{ form_widget(internForm.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            {{ form_widget(internForm.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="birthDate">Birth Date</label>
                        {{ form_widget(internForm.birthDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre</label>
                        {{ form_widget(internForm.genre, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="city">City</label>
                            {{ form_widget(internForm.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            {{ form_widget(internForm.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="actions">
                    <a class="btn cancel" href={{path("intern_index")}}>Cancel</a>
                    {{ form_widget(internForm.confirm) }}
                </div>
            {{ form_end(internForm) }}
        </div>
    </div>
{% endblock %}
