{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{asset('css/form.css')}}>
{% endblock %}

{% block javascripts %}

{% endblock %}

{% set operation = isEdit ? "Edit" : "Add" %}

{% block title %} Trainer {{operation}} Panel {% endblock %}
{% block pageTitle %} Trainer {{operation}} Panel {% endblock %}
{% block pageDesc %} 
    {{isEdit ? 
        "This is the page where you edit an trainer."
        :
        "This is the page where you add an trainer."
    }} 
{% endblock %}

{% block body %}
    <div class="add-edit-container">
        <div class="sidebar-form">
            <h2>
                <i class="fa-regular fa-file-lines"></i>
                <span>{{operation}} a trainer</span>
            </h2>
            <p class="description">
            {{isEdit ? 
                "Edit a trainer by updating their existing informations"
                :
                'Add a trainer by specifying their informations (Interns cannot be added into sessions from this page)'
            }}
             </p>
        </div>
        <div class="form-container">
            {{ form_start(trainerForm) }}
                <div class="inner-form">
                    <div class="form-group">
                        <label for="email">Email</label>
                        {{ form_widget(trainerForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            {{ form_widget(trainerForm.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            {{ form_widget(trainerForm.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="actions">
                    <a class="btn cancel" href={{path("trainer_index")}}>Cancel</a>
                    {{ form_widget(trainerForm.confirm) }}
                </div>
            {{ form_end(trainerForm) }}
        </div>
    </div>
{% endblock %}
